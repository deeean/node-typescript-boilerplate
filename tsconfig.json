{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": [
      "ES2020"
    ],
    "target": "ES2020",
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true
  }
}
